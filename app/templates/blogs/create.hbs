<div class="blog-container ">

    <div class="local-form">
        <h2>
            {{name}}
        </h2>
        <form {{action "createPost" blog on="submit"}}>
            <div class="error">
                {{#if errorMessage}}
                  {{errorMessage}}
                {{/if}}
            </div>
            <div class="input">
                <label>
                    Title
                </label>
                {{input value=blog.title type="text" required=true}}
            </div>
            <div class="input">
                <label>
                    Message
                </label>
                {{textarea value=blog.message type="text" required=true rows="3"}}
            </div>
            <button type="submit">Create a new blog</button>
            <button type="button" {{action 'cancel'}}>cancel</button>
        </form>
    </div>
</div>
